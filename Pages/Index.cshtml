@page
@model IndexModel
@{
    ViewData["Title"] = "SignalRChat";
}


<h1 class="display-3 text-center">Welcome to my signalR chat App</h1>
<div class="box container px-2">
    <div class="row mt-5">
        <div class="col-md-12 form-group">
            <textarea class="form-control" id="messageBox"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 form-group">
            <select id="group" class="form-control-sm">
                <option value="All">Everyone</option>
                <option value="Myself">Myself</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 form-group">
            <input type="button" id="btnSend" value="Send" class="btn btn-success">
        </div>
    </div>
</div>
<hr>

<div class="card bg-dark text-primary p-3">
    <div class="media-body">
        <div class="media-text">
            <div id="messagesField" style="background: #333;"></div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/messages.js"></script>